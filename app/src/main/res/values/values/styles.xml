<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Dialog.NoTitle">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/textPrimaryColor</item>
    </style>

    <style name="Text.Tiny">
        <item name="android:textSize">@dimen/text_tiny</item>
        <item name="android:textColor">@color/textSecondaryColor</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/textSecondaryColor</item>
    </style>

    <style name="Text.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Text.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Text.ExtraLarge">
        <item name="android:textSize">@dimen/text_extra_large_1</item>
    </style>

    <style name="Header">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Header.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Header.Small.Colored"/>

    <style name="Header.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Header.Medium.Colored"/>

    <style name="Header.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="Header.Large.Colored"/>

    <style name="List"/>

    <style name="List.Item">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="List.Item.Disabled">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@color/indigo_light_1</item>
    </style>

    <style name="List.Item.Clickable">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
</resources>
